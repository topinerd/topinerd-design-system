{
  "name": "topinerd-design-system",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@changesets/cli": "latest",
    "@topinerd/eslint-config": "*",
    "@topinerd/typescript-config": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.4.0",
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*",
    "packages/ui/*",
    "packages/presets/*",
    "packages/plugins/*",
    "packages/plugins/figma/*"
  ]
}
