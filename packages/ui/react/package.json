{
  "name": "@topinerd/react",
  "version": "0.0.0",
  "description": "A React implementation of the Topinerd design system",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "node": "./dist/index.cjs",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "yarn run prepare && tsup --minify --clean",
    "dev": "yarn run prepare && tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "prepare": "panda codegen && panda cssgen --outfile dist/styles.css",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.46.1",
    "@topinerd/eslint-config": "*",
    "@topinerd/styled-system": "workspace:^",
    "@topinerd/typescript-config": "*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vanilla-extract/css": "^1.15.2",
    "@vanilla-extract/esbuild-plugin": "2.3.0",
    "eslint": "^8.57.0",
    "postcss": "^8.4.47",
    "tsup": "7.2.0",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
